{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "types": ["graphql", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", ".eslintrc.cjs"]
}
